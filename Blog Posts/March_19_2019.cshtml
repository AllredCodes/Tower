@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "March 19th, 2019";
}

@section featured {
    <div id="blogBanner">
        <h1><span>&nbsp; Hobby Blog &nbsp;</span></h1>
    </div>
}
<script src="~/Scripts/IncludeHTML.js"></script>

<div class="row" id="blogPage">
    <div class="leftcolumn">


        <div class="card">
            <h2>Just Another Test Post</h2>
            <h5>A dwari for your thoughts, March 19th, 2019</h5>

            <img id="blogImage1" src="~/Blog Posts/Blog Images/Dwarf With Lantern.jpg" alt="Dwarf with Lantern"  />
